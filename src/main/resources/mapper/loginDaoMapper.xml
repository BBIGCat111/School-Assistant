<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.LoginDao">
    <resultMap id="loginUserResultMap" type="com.pojo.LoginUser">
        <id column="studentId" javaType="VARCHAR" property="studentId" />
        <result column="studentName" javaType="VARCHAR" property="studentName" />
        <result column="username" javaType="VARCHAR" property="username" />
        <result column="password" javaType="VARCHAR" property="password" />
    </resultMap>

    <select id="findLoginUser" parameterType="String" resultType="String">
        select studentId from login where username = #{username} and password = #{password}
    </select>
</mapper>

